	journal = {Journal of the Atmospheric Sciences},
	author = {Khouider, Boualem and Han, Ying and Biello, Joseph A.},
	month = aug,
	year = {2011},
	keywords = {Convective parameterization, Cumulus clouds, General circulation models, Madden-Julian oscillation, Radiative-convective equilibrium, Tropics},
	pages = {281--302}
}

@article{majda_new_2010,
