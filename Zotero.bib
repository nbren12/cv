@article{charney_growth_1964,
	title = {On the {Growth} of the {Hurricane} {Depression}},
	volume = {21},
	issn = {0022-4928},
	url = {http://journals.ametsoc.org/doi/abs/10.1175/1520-0469(1964)021%3C0068%3AOTGOTH%3E2.0.CO%3B2},
