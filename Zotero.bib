@article{arakawa_cumulus_2004,
	title = {The {Cumulus} {Parameterization} {Problem}: {Past}, {Present}, and {Future}},
	volume = {17},
	issn = {0894-8755},
	shorttitle = {The {Cumulus} {Parameterization} {Problem}},
